{
	"name": "@lutris/saline-components",
	"version": "0.0.10",
	"license": "ISC",
	"homepage": "https://github.com/lutriseng/saline-components",
	"author": "Piper McCorkle <piper@lutris.engineering>",
	"repository": "github:lutriseng/saline-components",
	"private": false,
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit sync && svelte-package",
		"build-preview": "svelte-kit sync && vite build",
		"prepublishOnly": "echo 'Did you mean to publish `./package/`, instead of `./`?' && exit 1",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"ci": "npm run lint && npm run build && npm run build-preview && npm run test:unit -- run && npm run check"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/adapter-static": "^2.0.0",
		"@sveltejs/kit": "^1.15.2",
		"@sveltejs/package": "^1.0.0",
		"@types/nprogress": "^0.2.0",
		"@types/prismjs": "^1.26.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"autoprefixer": "^10.4.13",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.8.1",
		"svelte": "^3.54.0",
		"svelte-check": "^3.0.1",
		"svelte-preprocess": "^5.0.1",
		"tslib": "^2.4.1",
		"typescript": "^4.9.3",
		"vite": "^4.0.0",
		"vite-imagetools": "^4.0.18",
		"vitest": "^0.28.0"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/orelega-one": "^4.5.10",
		"@fontsource/overpass-mono": "^4.5.11",
		"@fontsource/ovo": "^4.5.10",
		"@fontsource/readex-pro": "^4.5.13",
		"@fortawesome/free-solid-svg-icons": "^6.3.0",
		"@popperjs/core": "^2.11.6",
		"normalize.css": "^8.0.1",
		"nprogress": "^0.2.0",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0",
		"svelte-fa": "^3.0.3"
	},
	"peerDependencies": {
		"svelte": "^3.54.0",
		"vite-imagetools": "^4.0.18"
	}
}
